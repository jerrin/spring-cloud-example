type Message {
    id: ID
    content: String
}

type StockPrice {
    ticker: String
    date: String
    price: Float
}

input SendMessageInput {
    content: String!
}

type Query {
    message: Message!
    messages: [Message!]!
    allMessages: [Message!]!
}

type Mutation {
    sendMessage(input: SendMessageInput!): Message
    publishPrices: Boolean
}

type Subscription {
    messageStream: Message
    messageReactiveStream: Message
    stockPriceReactiveStream: StockPrice
}
